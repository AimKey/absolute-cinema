@model BusinessObjects.Models.Showtime

@{
    ViewData["Title"] = "Delete Showtime";
    Layout = "Admin/_AdminLayout";
}

<div class="min-h-screen bg-gray-900 text-gray-100">
    <div class="container mx-auto px-6 py-8">
        <!-- Header Section -->
        <div class="mb-8">
            <h1 class="mb-2 text-3xl font-bold text-white">Delete Showtime</h1>
            <p class="text-gray-400">Are you sure you want to delete this showtime?</p>
        </div>
        <!-- Details Card -->
        <div class="mx-auto mb-8 max-w-lg rounded-xl border border-gray-700 bg-gray-800 p-8 shadow-2xl">
            <dl class="divide-y divide-gray-700">
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.StartTime)</dt>
                    <dd class="text-white">@Html.DisplayFor(model => model.StartTime)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.EndTime)</dt>
                    <dd class="text-white">@Html.DisplayFor(model => model.EndTime)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.BasePrice)</dt>
                    <dd class="text-green-400">@Html.DisplayFor(model => model.BasePriceFormatted)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="text-white">@Html.DisplayFor(model => model.Status)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.Room)</dt>
                    <dd class="text-white">@Html.DisplayFor(model => model.Room.Name)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.Movie)</dt>
                    <dd class="text-white">@Html.DisplayFor(model => model.Movie.Title)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                    <dd class="text-gray-400">@Html.DisplayFor(model => model.CreatedAt)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.CreatedBy)</dt>
                    <dd class="text-gray-400">@Html.DisplayFor(model => model.CreatedBy)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.UpdatedAt)</dt>
                    <dd class="text-gray-400">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.UpdatedBy)</dt>
                    <dd class="text-gray-400">@Html.DisplayFor(model => model.UpdatedBy)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.RemovedAt)</dt>
                    <dd class="text-gray-400">@Html.DisplayFor(model => model.RemovedAt)</dd>
                </div>
                <div class="flex justify-between py-3">
                    <dt class="font-medium text-gray-300">@Html.DisplayNameFor(model => model.RemovedBy)</dt>
                    <dd class="text-gray-400">@Html.DisplayFor(model => model.RemovedBy)</dd>
                </div>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" class="mx-auto flex max-w-lg items-center justify-between">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="inline-flex cursor-pointer items-center rounded-lg bg-red-600 px-4 py-2 font-medium text-white shadow-lg transition-colors duration-200 hover:bg-red-700 hover:shadow-xl">Delete</button>
            <a asp-action="Index" class="ml-4 inline-flex items-center rounded-lg bg-gray-700 px-4 py-2 font-medium text-white transition-colors duration-200 hover:bg-gray-600">Back to List</a>
        </form>
    </div>
</div>
