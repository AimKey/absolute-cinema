@using System.Security.Claims
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin management</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-900 text-white">
    <partial name="_Notification" />
    @* Header *@
    <header class="fixed top-0 z-50 w-full transition-all duration-500 ease-in-out" id="navbar">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="group flex cursor-pointer items-center space-x-2">
                    <i class="fas fa-film animate-float text-2xl text-red-500 transition-all duration-300 group-hover:animate-spin-slow"></i>
                    <a class="transform text-2xl font-bold text-white no-underline transition-all duration-300 hover:scale-105 hover:bg-gradient-to-r hover:from-red-500 hover:to-orange-500 hover:bg-clip-text hover:text-transparent"
                       asp-area="" asp-controller="Admin" asp-action="Index">
                        Absolute Cinema
                    </a>
                </div>
                <!-- Desktop Navigation -->
                <div class="hidden items-center space-x-8 md:flex">
                    <!-- Quản lí nội dung Dropdown -->
                    <div class="group relative">
                        <button class="nav-link-hover py-2 text-white transition-all duration-300 hover:text-red-500">
                            <span>Quản lí nội dung</span>
                            <i class="fas fa-chevron-down ml-1 transform text-xs transition-transform duration-300 group-hover:rotate-180"></i>
                        </button>
                        <div class="dropdown-menu animate-slide-in invisible absolute top-full left-0 mt-2 w-64 rounded-lg border border-gray-700 bg-gray-800/95 opacity-0 shadow-2xl backdrop-blur-md transition-all duration-300 group-hover:visible group-hover:opacity-100">
                            <div class="grid grid-cols-1 gap-2 p-2">
                                @* Changed to grid-cols-1 for vertical display *@
                                <a href="/Admin/Movies" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-video mr-2 group-hover:animate-bounce"></i>Phim
                                </a>
                                <a href="/Admin/Tags" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-tags mr-2 group-hover:animate-bounce"></i>Thể loại
                                </a>
                                <a href="#" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-user-tie mr-2 group-hover:animate-bounce"></i>Diễn viên
                                </a>
                                <a href="#" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-video mr-2 group-hover:animate-bounce"></i>Đạo diễn
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Quản lí rạp chiếu Dropdown -->
                    <div class="group relative">
                        <button class="nav-link-hover py-2 text-white transition-all duration-300 hover:text-red-500">
                            <span>Quản lí rạp chiếu</span>
                            <i class="fas fa-chevron-down ml-1 transform text-xs transition-transform duration-300 group-hover:rotate-180"></i>
                        </button>
                        <div class="dropdown-menu animate-slide-in invisible absolute top-full left-0 mt-2 w-64 rounded-lg border border-gray-700 bg-gray-800/95 opacity-0 shadow-2xl backdrop-blur-md transition-all duration-300 group-hover:visible group-hover:opacity-100">
                            <div class="grid grid-cols-1 gap-2 p-2">
                                @* Changed to grid-cols-1 for vertical display *@
                                <a href="/Rooms" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-door-open mr-2 group-hover:animate-bounce"></i>Phòng chiếu
                                </a>
                                <a href="#" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-list mr-2 group-hover:animate-bounce"></i>Loại ghế
                                </a>
                                <a href="#" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-chair mr-2 group-hover:animate-bounce"></i>Ghế ngồi
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Other direct admin links -->
                    <div class="group relative">
                        <button class="nav-link-hover py-2 text-white transition-all duration-300 hover:text-red-500">
                            <span>Suất chiếu & Bán vé</span>
                            <i class="fas fa-chevron-down ml-1 transform text-xs transition-transform duration-300 group-hover:rotate-180"></i>
                        </button>
                        <div class="dropdown-menu animate-slide-in invisible absolute top-full left-0 mt-2 w-64 rounded-lg border border-gray-700 bg-gray-800/95 opacity-0 shadow-2xl backdrop-blur-md transition-all duration-300 group-hover:visible group-hover:opacity-100">
                            <div class="grid grid-cols-1 gap-2 p-2">
                                @* Changed to grid-cols-1 for vertical display *@
                                <a href="/Admin/Showtimes" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-clock mr-2 group-hover:animate-bounce"></i>Suất chiếu
                                </a>
                                <a href="#" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-shopping-cart mr-2 group-hover:animate-bounce"></i>Đặt vé
                                </a>
                                <a href="#" class="dropdown-item group rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                    <i class="fas fa-receipt mr-2 group-hover:animate-bounce"></i>Vé đã bán
                                </a>
                            </div>
                        </div>
                    </div>

                    <a asp-action="ManageUsers" asp-controller="Admin"
                       class="nav-link-hover py-2 text-white no-underline transition-all duration-300 hover:text-red-500">
                        <span>Quản lý Người dùng</span>
                    </a>
                </div>
                <!-- Search Bar & User Actions -->
                <div class="hidden items-center space-x-4 md:flex">
                    <!-- Search Form -->
                    <form asp-area="" asp-controller="Search" asp-action="Index" method="get">
                        <div class="group relative">
                            <input type="text" name="query" placeholder="Tìm kiếm phim..."
                                   class="search-input w-64 rounded-full bg-gray-800 px-4 py-2 text-white transition-all duration-300 focus:ring-2 focus:ring-red-500 focus:outline-none">
                            <button type="submit" class="search-btn absolute top-2 right-3 text-gray-400 transition-all duration-300 hover:text-red-500">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                    <!-- User Authentication Area -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- User Menu for Authenticated Users -->
                        <div class="group relative">
                            <button class="flex items-center space-x-2 text-white transition-all duration-300 hover:scale-105 hover:text-red-500">
                                <div class="w-10 h-10 rounded-full flex gap-2 items-center justify-center text-white font-semibold text-md">
                                    <img src="@(User.FindFirstValue("Avatar") ?? "/image/defaultAva.jpg")"
                                         alt="User Avatar"
                                         class="w-10 h-10 rounded-full object-cover"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                </div>
                                <span>@User.Identity.Name</span>
                                <i class="fas fa-chevron-down transform text-xs transition-transform duration-300 group-hover:rotate-180"></i>
                            </button>
                            <div class="user-menu animate-slide-in invisible absolute top-full right-0 mt-2 w-48 rounded-lg border border-gray-700 bg-gray-800/95 opacity-0 shadow-2xl backdrop-blur-md transition-all duration-300 group-hover:visible group-hover:opacity-100">
                                <div class="p-2">
                                    <a asp-area="" asp-controller="Account" asp-action="Profile"
                                       class="dropdown-item flex items-center space-x-2 rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                        <i class="fas fa-user"></i><span>Hồ sơ</span>
                                    </a>
                                    <a asp-area="" asp-controller="Account" asp-action="Settings"
                                       class="dropdown-item flex items-center space-x-2 rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                        <i class="fas fa-cog"></i><span>Cài đặt</span>
                                    </a>
                                    <a asp-area="" asp-controller="Movie" asp-action="Favorites"
                                       class="dropdown-item flex items-center space-x-2 rounded p-2 text-sm text-gray-300 no-underline transition-all duration-300 hover:text-white">
                                        <i class="fas fa-heart animate-pulse"></i><span>Yêu thích</span>
                                    </a>
                                    <hr class="my-2 border-gray-600">
                                    <a asp-area="" asp-controller="Account" asp-action="Logout"
                                       class="dropdown-item flex items-center space-x-2 rounded p-2 text-sm text-red-400 no-underline transition-all duration-300 hover:text-red-300">
                                        <i class="fas fa-sign-out-alt"></i><span>Đăng xuất</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Login/Register Buttons for Non-Authenticated Users -->
                        <div class="flex items-center space-x-3">
                            <a asp-area="" asp-controller="Account" asp-action="Login"
                               class="text-white no-underline transition-all duration-300 hover:scale-105 hover:text-red-500">
                                <i class="fas fa-sign-in-alt mr-1"></i>Đăng nhập
                            </a>
                            <a asp-area="" asp-controller="Account" asp-action="Register"
                               class="login-btn group relative overflow-hidden rounded-full bg-gradient-to-r from-red-500 to-red-600 px-4 py-2 font-semibold text-white no-underline transition-all duration-300 hover:shadow-glow-lg hover:scale-105 hover:from-red-600 hover:to-red-700">
                                <span class="shimmer absolute inset-0 translate-x-[-100%] bg-gradient-to-r from-white/20 to-white/10 transition-transform duration-500 group-hover:translate-x-[100%]"></span>
                                <span class="relative"><i class="fas fa-user-plus mr-2"></i>Đăng ký</span>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    @await Html.PartialAsync("_Notification")
    <!-- Main Content Area -->
    <main role="main" class="pt-20">
        @RenderBody()
    </main>
    <!-- Footer -->
    <partial name="_Footer" />
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Layout/layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
