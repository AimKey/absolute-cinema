@{
    ViewData["Title"] = "Trang chủ";
}
@model Absolute_cinema.Models.ViewModels.TestUserVM

<!-- Hero Section -->
<section class="relative h-screen bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');">
    <div class="absolute inset-0 hero-gradient"></div>
    <div class="relative z-10 container mx-auto px-4 h-full flex items-center">
        <div class="max-w-2xl">
            <h1 class="text-5xl md:text-7xl font-bold mb-4">
                Chào mừng
                @if (!string.IsNullOrEmpty(Model?.UserDetail?.FullName))
                {
                    <span class="text-red-500">@Model.UserDetail.FullName</span>
                }
                else if (!string.IsNullOrEmpty(Model?.Username))
                {
                    <span class="text-red-500">@Model.Username</span>
                }
            </h1>
            <h2 class="text-2xl md:text-3xl mb-6 text-yellow-400">
                @if (!string.IsNullOrEmpty(Model?.Role))
                {
                    <span>@Model.Role
                    - </span>
                    }
                PHIM HAY MỚI NHẤT 2025
            </h2>
            <p class="text-lg mb-8 text-gray-300">
                Khám phá thế giới điện ảnh với hàng ngàn bộ phim chất lượng cao.
                Từ phim hành động, tình cảm đến kinh dị, tất cả đều có tại đây.
            </p>
            <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
                <button class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-full font-semibold transition-colors">
                    <i class="fas fa-play mr-2"></i>Xem phim ngay
                </button>
                <button class="border border-white hover:bg-white hover:text-black px-8 py-3 rounded-full font-semibold transition-colors">
                    <i class="fas fa-user mr-2"></i>Hồ sơ của tôi
                </button>
            </div>
        </div>
    </div>
</section>

<!-- User Info Section (Only show if user data exists) -->

<!-- Featured Movies Section -->
<section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center">
            <i class="fas fa-star text-yellow-500 mr-2"></i>
            PHIM NỔI BẬT
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="movie-card bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">
                    <div class="relative group">
                        <img src="https://picsum.photos/200/300?random=@i" alt="Movie @i" class="w-full h-64 object-cover">
                        <div class="absolute top-2 right-2 bg-red-600 text-white px-2 py-1 rounded text-sm font-semibold">HD</div>
                        <div class="absolute top-2 left-2 bg-yellow-500 text-black px-2 py-1 rounded text-xs font-bold">
                            <i class="fas fa-star mr-1"></i>@(8 + (i * 0.1))
                        </div>
                        <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                            <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-full transition-colors">
                                <i class="fas fa-play mr-2"></i>Xem ngay
                            </button>
                        </div>
                    </div>
                    <div class="p-3">
                        <h3 class="font-semibold text-sm mb-1 truncate text-white">Phim Hay Số @i</h3>
                        <div class="flex justify-between items-center text-xs text-gray-400">
                            <span>2025</span>
                            <span><i class="fas fa-eye mr-1"></i>@((i * 123))K lượt xem</span>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-8">
            <button class="bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded-full font-semibold transition-colors">
                <i class="fas fa-th mr-2"></i>Xem tất cả phim
            </button>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-16 bg-gray-800">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center">
            <i class="fas fa-film mr-2 text-red-500"></i>
            THỂ LOẠI PHIM
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <a href="#" class="bg-red-600 hover:bg-red-700 p-6 rounded-lg text-center transition-all duration-300 hover:scale-105 block no-underline text-white">
                <i class="fas fa-fist-raised text-2xl mb-2"></i>
                <p class="font-semibold">Hành Động</p>
                <p class="text-xs opacity-75">1,234 phim</p>
            </a>
            <a href="#" class="bg-pink-600 hover:bg-pink-700 p-6 rounded-lg text-center transition-all duration-300 hover:scale-105 block no-underline text-white">
                <i class="fas fa-heart text-2xl mb-2"></i>
                <p class="font-semibold">Tình Cảm</p>
                <p class="text-xs opacity-75">856 phim</p>
            </a>
            <a href="#" class="bg-purple-600 hover:bg-purple-700 p-6 rounded-lg text-center transition-all duration-300 hover:scale-105 block no-underline text-white">
                <i class="fas fa-ghost text-2xl mb-2"></i>
                <p class="font-semibold">Kinh Dị</p>
                <p class="text-xs opacity-75">567 phim</p>
            </a>
            <a href="#" class="bg-blue-600 hover:bg-blue-700 p-6 rounded-lg text-center transition-all duration-300 hover:scale-105 block no-underline text-white">
                <i class="fas fa-rocket text-2xl mb-2"></i>
                <p class="font-semibold">Khoa Học</p>
                <p class="text-xs opacity-75">432 phim</p>
            </a>
            <a href="#" class="bg-green-600 hover:bg-green-700 p-6 rounded-lg text-center transition-all duration-300 hover:scale-105 block no-underline text-white">
                <i class="fas fa-laugh text-2xl mb-2"></i>
                <p class="font-semibold">Hài Hước</p>
                <p class="text-xs opacity-75">789 phim</p>
            </a>
            <a href="#" class="bg-yellow-600 hover:bg-yellow-700 p-6 rounded-lg text-center transition-all duration-300 hover:scale-105 block no-underline text-white">
                <i class="fas fa-child text-2xl mb-2"></i>
                <p class="font-semibold">Hoạt Hình</p>
                <p class="text-xs opacity-75">345 phim</p>
            </a>
        </div>
    </div>
</section>

<!-- Latest Updates Section -->
<section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold">
                <i class="fas fa-clock mr-2 text-green-500"></i>
                PHIM MỚI CẬP NHẬT
            </h2>
            <a href="#" class="text-red-500 hover:text-red-400 font-semibold">
                Xem tất cả <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="flex bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-colors">
                    <img src="https://picsum.photos/100/140?random=@(i+10)" alt="Movie" class="w-24 h-32 object-cover">
                    <div class="p-4 flex-1">
                        <h3 class="font-semibold mb-2 text-white">Phim Mới Số @i</h3>
                        <p class="text-gray-400 text-sm mb-2">2025 • Hành Động, Phiêu Lưu</p>
                        <div class="flex items-center justify-between">
                            <span class="bg-red-600 text-white px-2 py-1 rounded text-xs font-semibold">HD</span>
                            <span class="text-yellow-400 text-sm">
                                <i class="fas fa-star"></i> @(8.0 + (i * 0.2))
                            </span>
                        </div>
                        <div class="mt-2 text-xs text-gray-500">
                            <i class="fas fa-eye mr-1"></i>@((i * 89))K lượt xem
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Welcome Message for Development -->
@if (Model != null)
{
    <section class="py-8 bg-gray-700">
        <div class="container mx-auto px-4 text-center">
            <div class="bg-green-600 text-white p-4 rounded-lg inline-block">
                <i class="fas fa-check-circle mr-2"></i>
                <strong>Kết nối database thành công!</strong>
                Dữ liệu user đã được load từ database và hiển thị trên trang.
            </div>
        </div>
    </section>
}