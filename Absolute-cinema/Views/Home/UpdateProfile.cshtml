@model UpdateProfileVM
@{
    ViewData["Title"] = "Cập nhật tài khoản";
}
<div class="container mt-5" style="max-width: 700px;">
    <h2 class="mb-4 text-center">Tài khoản</h2>
    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
        <div class="mb-4 d-flex flex-column align-items-center justify-content-center">
            <img id="avatarPreview" src="@(Model.AvatarURL ?? "/img/default-avatar.png")" alt="avatar" style="width:140px;height:140px;border-radius:50%;object-fit:cover;box-shadow:0 2px 8px rgba(0,0,0,0.1);border:4px solid #fff;" />
            <div class="mt-3">
                <label class="btn btn-secondary">
                    Đổi ảnh đại diện <input type="file" name="Avatar" accept="image/*" hidden onchange="previewAvatar(event)" />
                </label>
            </div>
        </div>
        <div class="mb-3">
            <label>Họ tên</label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Giới tính</label><br />
            <input type="radio" asp-for="Gender" value="Nam" checked="@(Model.Gender=="Nam")" /> Nam
            <input type="radio" asp-for="Gender" value="Nữ" checked="@(Model.Gender=="Nữ")" class="ms-3" /> Nữ
            <input type="radio" asp-for="Gender" value="Khác" checked="@(Model.Gender=="Khác")" class="ms-3" /> Khác
        </div>
        <div class="mb-3">
            <label>Ngày sinh</label>
            <input asp-for="Dob" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Số điện thoại</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-warning">Cập nhật</button>
        </div>
    </form>
</div>
<script>
function previewAvatar(event) {
    const [file] = event.target.files;
    if (file) {
        document.getElementById('avatarPreview').src = URL.createObjectURL(file);
    }
}
</script> 